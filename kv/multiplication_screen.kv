Multiply:
    name: "multiplication_screen"
    on_pre_enter: root.set_nums()

    MDBoxLayout:
        orientation: "vertical"
        spacing: root.height/4
        
        MDBoxLayout:
            orientation: "vertical"
            spacing: "40dp"

            # Page header.    
            MDLabel:
                text: "Tabliczka Mnożenia"
                font_style: "H4"
                halign: "center"

            # Question card.
            MDCard:
                orientation: "vertical"
                halign: "center"
                size_hint: None, None
                size: "300dp", "200dp"
                pos_hint: {"center_x": .5, "center_y": .2}
                MDLabel:
                    text: "Jaki będzie wynik ?"
                    theme_text_color: "Secondary"
                    halign: "center"
                MDSeparator:
                    height: "1dp"
                # Numbers to multiply.
                MDBoxLayout:
                    MDLabel:
                        # Get num1 from Multiply.
                        id: num1
                        text: ""
                        font_size: "55dp"
                        halign: "center"
                    MDLabel:
                        text: "razy"
                        halign: "center"
                    MDLabel:
                        # Get num2 from Multiply.
                        id: num2
                        text: ""
                        font_size: "55dp"
                        halign: "center"
            
            # Result card.
            MDCard:
                orientation: "vertical"
                size_hint: None, None
                size: "300dp", "200dp"
                pos_hint: {"center_x": .5, "center_y": .5}
                MDBoxLayout:
                    orientation: "vertical"
                    padding: "5dp"
                    MDLabel:
                        id: result_card
                        font_size: "15dp"
                        text: "Wpisz wynik."
                        theme_text_color: "Secondary"
                        halign: "center"
                        size_hint_y: None
                        height: self.texture_size[1]
                MDTextField:
                    id: multiplication_result
                    multiline: False
                    pos_hint: {"center_y": .5}
                    halign: "center"
                    input_type: 'number'
                    font_size: "40dp"
                MDBoxLayout:
                    orientation: "vertical"
                    padding: "10dp"
                    # Check result button.
                    MDRaisedButton:
                        id: check_button
                        text: "Sprawdź !"
                        font_style: "H6"
                        theme_text_color: "Custom"
                        on_press: root.show_result()
                        size: "80dp", "50dp"
                        size_hint: None, None 
                        pos_hint: {"center_x": .5, "center_y": .5}
    
        # Bottom NAV.
        MDBottomNavigation:        
            size_hint_y: None
            # Main screen
            MDBottomNavigationItem: 
                name: "Menu"
                text: "Start"
                icon: "menu"
                on_tab_press: 
                    app.screen_manager.current = "main_screen"
                    root.manager.transition.direction = "right"
