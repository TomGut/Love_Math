Results:
    name: "results_screen"
    on_pre_enter: 
        multiplication_result.text = root.get_result(app.db, "multiply")
        fraction_result.text = root.get_result(app.db, "multiply")
        roman_result.text = root.get_result(app.db, "multiply")
        percent_result.text = root.get_result(app.db, "multiply")

    MDBoxLayout:
        orientation: "vertical"
        
        MDBoxLayout:
            orientation: "vertical"
            # Page header.    
            MDLabel:
                text: "Twoje wyniki"
                font_style: "H4"
                halign: "center"
                adaptative_height: False
    
            # Total results card.
            MDCard:
                orientation: "vertical"
                halign: "center"
                size_hint: None, None
                size: "300dp", "400dp"
                pos_hint: {"center_x": .5, "center_y": .5}
                padding: "20px"
                # Multiplication.
                MDBoxLayout:
                    orientation: "horizontal"
                    MDLabel:
                        text: "Tabliczka mnożenia"
                        theme_text_color: "Secondary"
                        halign: "center"
                    MDLabel:
                        id: multiplication_result
                        text: ""
                        theme_text_color: "Secondary"
                        halign: "center"
                # Fractions.
                MDBoxLayout:
                    orientation: "horizontal"
                    spacing: "10dp"
                    MDLabel:
                        text: "Ułamki"
                        theme_text_color: "Secondary"
                        halign: "center"
                    MDLabel:
                        id: fraction_result
                        text: ""
                        theme_text_color: "Secondary"
                        halign: "center"
                # Percents.
                MDBoxLayout:
                    orientation: "horizontal"
                    spacing: "10dp"
                    MDLabel:
                        text: "Procenty"
                        theme_text_color: "Secondary"
                        halign: "center"
                    MDLabel:
                        id: percent_result
                        text: ""
                        theme_text_color: "Secondary"
                        halign: "center"
                # Roman numbers.
                MDBoxLayout:
                    orientation: "horizontal"
                    spacing: "10dp"
                    MDLabel:
                        text: "Cyfry rzymskie"
                        theme_text_color: "Secondary"
                        halign: "center"
                    MDLabel:
                        id: roman_result
                        text: ""
                        theme_text_color: "Secondary"
                        halign: "center"
            # Send sms.
            MDBoxLayout:
                orientation: "vertical"
                padding: "30px"
                MDFillRoundFlatButton:
                    text: "wyślij wynik"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    font_size: "18sp"
                    padding: "20px"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    #TODO implement method in Android_helpers.
                    on_press: root.send_result_sms(app.phone)
               
        # Bottom NAV.
        MDBottomNavigation:        
            size_hint_y: .2
            panel_color: (250/255, 232/255, 238/255, 1)
            selected_color_background: (1,0,1,1)
            text_color_active: (1,0,0,1)
            # Go back to main screen.
            MDBottomNavigationItem: 
                text: "Do Menu"
                icon: "backup-restore"
                on_tab_press:
                    app.screen_manager.current = "main_screen"
                    root.manager.transition.direction = "right"
            # Go to previous screen.
            MDBottomNavigationItem: 
                text: "Powrót"
                icon: "backburger"
                on_tab_press: 
                    #TODO change way of navigation when multiple screens.
                    app.screen_manager.current = app.screen_manager.next()
                    root.manager.transition.direction = "right"
            # Close the app.
            MDBottomNavigationItem: 
                text: "Koniec"
                icon: "exit-run"
                on_tab_press:
                    Factory.Ui_Helpers().custom_popup( \
                    t_txt="Potwierdź", \
                    c_txt="Wyniki zostaną utracone.\nMoże najpierw je wyślij.\n\nCzy na pewno wyjść z aplikacji?", \
                    foo=app, \
                    exit_popup=True, \
                    go_main_screen=False)